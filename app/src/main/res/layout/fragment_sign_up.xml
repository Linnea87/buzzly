<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_auth"
        android:padding="@dimen/auth_screen_padding">

    <!-- Logo -->
    <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AuthLogoText"
            android:text="@string/app_name"
            android:layout_marginTop="@dimen/auth_logo_margin_top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Email -->
    <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:hint="@string/auth_email_hint"
            android:inputType="textEmailAddress"
            android:padding="@dimen/auth_input_padding"
            android:layout_marginTop="@dimen/auth_input_margin_top_large"
            app:layout_constraintTop_toBottomOf="@id/tvLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Password -->
    <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:hint="@string/auth_password_hint"
            android:inputType="textPassword"
            android:padding="@dimen/auth_input_padding"
            android:layout_marginTop="@dimen/auth_input_margin_top_medium"
            app:layout_constraintTop_toBottomOf="@id/etEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sign up button -->
    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/auth_sign_up"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/auth_button_margin_top"
            app:layout_constraintTop_toBottomOf="@id/etPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
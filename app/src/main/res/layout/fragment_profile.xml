<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@android:color/white">

    <!-- PROFILE HEADER -->
    <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/centerColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/tvProfileSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online"
            android:textSize="14sp"
            android:textColor="@color/endColor"
            android:alpha="0.7"
            app:layout_constraintTop_toBottomOf="@id/tvProfileName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"/>

    <!-- DIVIDER -->
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/centerColor"
            android:alpha="0.25"
            app:layout_constraintTop_toBottomOf="@id/tvProfileSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- PEOPLE HEADER -->
    <TextView
            android:id="@+id/tvPeopleHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/centerColor"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"/>

    <!-- USERS PLACEHOLDER (SENARE RECYCLERVIEW) -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvUsers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvPeopleHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
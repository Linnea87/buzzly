<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/space_lg"
        android:paddingVertical="@dimen/space_sm">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_lg_plus"
            android:background="@drawable/bg_user_row"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <!-- AVATAR PLACEHOLDER -->
        <View
                android:id="@+id/viewAvatar"
                android:layout_width="@dimen/avatar_md"
                android:layout_height="@dimen/avatar_md"
                android:background="@drawable/bg_avatar_user_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- USERNAME -->
        <TextView
                android:id="@+id/tvUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/chat_user_placeholder"
                android:textSize="@dimen/text_base"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/space_lg"
                app:layout_constraintStart_toEndOf="@id/viewAvatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>